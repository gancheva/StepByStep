<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="5dp">
    
    <TextView
        android:id="@+id/first_time_screen_textview"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/first_time_screen_button"
        android:text="@string/first_screen_title"
        android:textColor="#FFFFFF"
	    android:textSize="20sp"
        android:gravity="center"/>
    	
    <ImageButton
        android:background="#00FFFFFF"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:id="@id/first_time_screen_button"
        android:src="@drawable/right_button"
        android:layout_alignParentRight="true" 
        android:scaleType="centerInside"
        android:paddingLeft="5dp"/>

</RelativeLayout>
